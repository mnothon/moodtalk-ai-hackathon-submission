<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="11-update-project-fk-on-delete-cascade" author="jop" objectQuotingStrategy="QUOTE_ALL_OBJECTS">
        <comment>Update foreign key fk_assignments_project to cascade deletes from project to assignments</comment>

        <dropForeignKeyConstraint
                baseTableName="assignments"
                constraintName="fk_assignments_project"/>

        <addForeignKeyConstraint
                baseTableName="assignments"
                baseColumnNames="project_id"
                referencedTableName="project"
                referencedColumnNames="id"
                constraintName="fk_assignments_project"
                onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>